
<!DOCTYPE html>
<html>
<head>
  <title>Dynamic Product Filter</title>
  <style>
    body {
      font-family: Arial, sans-serif;
    }
    .container {
      border: 1px solid black;
      padding: 15px;
      width: 400px;
      margin: 20px auto;
    }
    h2 {
      margin-top: 0;
    }
    .product {
      border: 1px solid #ccc;
      margin: 5px 0;
      padding: 10px;
      border-radius: 5px;
    }
  </style>
</head>
<body>

<div class="container">
  <h2>Product List</h2>
  
  <label for="category">Filter by Category:</label>
  <select id="category">
    <option value="All">All</option>
    <option value="Clothing">Clothing</option>
    <option value="Electronics">Electronics</option>
    <option value="Books">Books</option>
  </select>
  
  <div id="product-list">
    <div class="product" data-category="Clothing">T-Shirt</div>
    <div class="product" data-category="Clothing">Jeans</div>
    <div class="product" data-category="Electronics">Headphones</div>
    <div class="product" data-category="Electronics">Smartphone</div>
    <div class="product" data-category="Books">Novel</div>
    <div class="product" data-category="Books">Cookbook</div>
  </div>
</div>

<script>
  // Get dropdown and product list
  const dropdown = document.getElementById("category");
  const products = document.querySelectorAll(".product");

  dropdown.addEventListener("change", function() {
    const selected = dropdown.value;

    products.forEach(function(product) {
      if (selected === "All" || product.getAttribute("data-category") === selected) {
        product.style.display = "block"; // show
      } else {
        product.style.display = "none";  // hide
      }
    });
  });
</script>

</body>
</html>
